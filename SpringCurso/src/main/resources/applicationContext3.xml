<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- bean definitions here -->


    <bean id="miInformeBean" class="org.example.internal.xml.Informe"></bean>


    <!-- aqui agregamos la etqiuetas de apertura para los metodos init y destroy agregaomoslo metodo que qeremos sean los init o destroy-->
    <bean id="miEmpleadoBean" class="org.example.internal.xml.DirectorEmpleado"
        init-method="metodoInicial" destroy-method="metodoFinal">
        <constructor-arg ref="miInformeBean"></constructor-arg>
    </bean>




</beans>