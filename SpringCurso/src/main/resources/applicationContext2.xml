<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- bean definitions here -->

    <bean id="miInformeBean" class="org.example.internal.Informe"></bean>

    <bean id="miSecretarioBean" class="org.example.internal.SecretarioEmpleado" scope="prototype">

        <!-- para agregar la referencia a una inyeccion desde el setter , tenemis que rellemanar name
            para ello , consites en el nombre del set , sin el sety la primera parabra en  miniuscula y el respoto como
            en el metodo setter -->
        <property name="informeNuevo" ref="miInformeBean"></property>
    </bean>

</beans>