<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- bean definitions here -->

    <!-- Aqui cargamos los valores de los campos des un archivos externo en este caso el propeties, queluego se usaran en la inyeccion -->

    <context:property-placeholder location="classpath:log4j.properties"></context:property-placeholder>

    <bean id="miInformeBean" class="org.example.internal.Informe">

    </bean>

    <bean id="miEmpleadoBean" class="org.example.internal.DirectorEmpleado">
        <constructor-arg ref="miInformeBean"></constructor-arg>

        <property name="email" value="${email}"></property>
        <property name="nombreEmpresa" value="${nombreEmpresa}"></property>
    </bean>

    <bean id="miSecretarioBean" class="org.example.internal.SecretarioEmpleado">

        <!-- para agregar la referencia a una inyeccion desde el setter , tenemis que rellemanar name
            para ello , consites en el nombre del set , sin el sety la primera parabra en  miniuscula y el respoto como
            en el metodo setter -->

        <property name="informeNuevo" ref="miInformeBean"></property>


        <!-- Aqui estamos inyectando dependencias del tipo campo , para email y nombre empresa que se inyectaran con los
        valores en la clase secretario empleado se parece mucho a las inyeccion setter es importante el nombre que se basa en metodo set sin set y la primera
        letra minuscula , y el value que tendra el campo que qeremos inyectar-->

        <property name="email" value="secretaria@hotmail.es"></property>
        <property name="nombreEmpresa" value="jabanto GMBH"></property>

    </bean>



</beans>