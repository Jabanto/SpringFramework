<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- bean definitions here -->

    <!-- Aqui cargamos los valores de los campos des un archivos externo en este caso el propeties, queluego se usaran en la inyeccion -->

    <context:property-placeholder location="classpath:log4j.properties"></context:property-placeholder>

    <!-- Aqui activamos y definmos donde buscar las anotacionesn para que spring activa elescaneo de anotaciones -->

    <context:component-scan base-package="org.example.internal.anotaciones"></context:component-scan>




</beans>